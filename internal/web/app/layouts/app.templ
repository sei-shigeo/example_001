				</div>
			</li>
			<li>
				<div class="flex items-center gap-2 h-10">
					@icon.Book(icon.Props{Size: 24})
					<a href="/order">受注情報</a>
				</div>
			</li>
			<li>
				<div class="flex items-center gap-2 h-10">
					@icon.Book(icon.Props{Size: 24})
